<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".ui.horoscope.HoroscopeFragment">

    <!--En teoría un Recycler View debería ir dentro de un Constraint Layout, pero cuando no se cargan tantas cosas con un Frame Layout también basta, y de hecho consume menos recursos-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvHoroscope"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    
</FrameLayout>